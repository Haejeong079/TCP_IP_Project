{{>layouts/DashboardNav}}

<section class="notice">
    <div class="p-5 mb-4" style="background-color: #97C1A9; border-radius: 0.5rem;">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw bold">community story</h1>
            <p class="col-md-9 fs-5">
                "커뮤니티 게시판에서 소식과 이야기를 나눠보세요. 다양한 주제와 정보가 여러분을 기다리고 있어요."
            </p>
            <button class="btn btn-primary btn-lg" id="createbutton" type="button" onclick="gotocreateDashboard()">게시물 추가하기</button>
        </div>
    </div>

</section>
<section class="table">
    <h2 class="text-center mb-4">자유 게시판</h2>
    <!-- board search area -->
    <div id="board-search" class="text-center mb-4">
        <div class="container">
            <div class="search-window">
                <form action="" class="row g-3 align-items-center justify-content-center"> <!-- 중앙 정렬을 위해 justify-content-center 추가 -->
                    <!-- 검색 유형을 선택하는 드롭다운 -->
                    <div class="col-auto">
                        <label for="search-type" class="visually-hidden">검색 유형</label>
                        <select class="form-select" id="search-type" name="search-type">
                            <option value="title">제목</option>
                            <option value="content">내용</option>
                            <option value="writer">작성자</option>
                        </select>
                    </div>

                    <!-- 실제 검색 입력 필드 -->
                    <div class="col">
                        <label for="search" class="visually-hidden">게시물 검색</label>
                        <input type="search" class="form-control" id="search" placeholder="게시물을 검색해보세요.">
                    </div>

                    <!-- 검색 버튼 -->
                    <div class="col-auto">
                        <button type="submit" class="btn btn-dark">검색</button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!-- board list area -->
    <div id="board-list">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">제목</th>
                <th scope="col">작성자</th>
                <th scope="col">날짜</th>
                <th scope="col">조회수</th>
                <th scope="col">댓글수</th>
            </tr>
            </thead>
            {{#boardlist}}
                <tr>
                    <th><a href="/dashboard/{{nickname}}/{{id}}">{{Title}}</a></th>
                    <td>{{nickname}}</td>
                    <td>{{uploadDate}}</td>
                    <td>{{viewCount}}</td>
                    <td>{{commentCount}}</td>
                </tr>
                {{/boardlist}}
        </table>
    </div>
</section>

<!-- Bootstrap JavaScript (jQuery and Popper.js required) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<script>
    function gotocreateDashboard(){
        document.getElementById("createbutton").addEventListener("click", function() {
            // 이동할 페이지의 경로를 설정
            window.location.href = "/dashboard/new";
        });

        // 페이지 로드 시 redirectToSignUp 함수 호출
        window.onload = function() {
            gotocreateDashboard();
        }
    }
</script>
</body>
</html>
